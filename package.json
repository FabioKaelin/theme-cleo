{
    "name": "theme-1",
    "displayName": "%displayName%",
    "description": "%description%",
    "version": "1.0.0",
    "publisher": "fabio",
    "license": "MIT",
    "engines": {
        "vscode": "*"
    },

    "contributes": {
		"viewsWelcome": [
			{
			"view": "cleoView1",
            "contents": "Set your Theme to a Cleo-Theme!!!\n[Select Theme](command:workbench.action.selectTheme)\n[Open Folder](command:vscode.openFolder)\n[Open File](command:workbench.action.files.openFile)"
			}
		],
        "menus": {
            "view/title": [
				{
					"command": "workbench.action.selectTheme",
					"when": "view == cleoView1",
					"group": "navigation"
				}
            ]
        },
        "views": {
			"cleoView": [
				{
					"id": "cleoView1",
					"name": "Cleo"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"icon": "fileicons/images/cat.svg",
					"id": "cleoView",
					"title": "Cleo"
				}
			]
		},

        "keybindings": [
            {
                "key": "ctrl+alt+c",
                "command": "type",
                "args": { "text": "Cleo" },
                "when": "editorTextFocus"
            }
        ],
        "iconThemes": [
            {
                "id": "material-icon-theme",
                "label": "Cleo Icon Theme",
                "path": "./dist/material-icons.json",
                "_watch": true
            }
        ],
        "themes": [
            {
                "id": "cleo blue",
                "label": "-Cleo Blue",
                "uiTheme": "vs-dark",
                "path": "./themes/cleoBlue-color-theme.json"
            },
            {
                "id": "cleo default",
                "label": "--Cleo Default",
                "uiTheme": "vs-dark",
                "path": "./themes/cleoDefault-color-theme.json"
            },
            {
                "id": "cleo green",
                "label": "-Cleo Green",
                "uiTheme": "vs-dark",
                "path": "./themes/cleoGreen-color-theme.json"
            },
            {
                "id": "cleo red",
                "label": "-Cleo Red",
                "uiTheme": "vs-dark",
                "path": "./themes/cleoRed-color-theme.json"
            }
        ]
    },
    "icon": "cleo.png",
    "keywords": [
        "theme",
        "blue",
        "green",
        "cleo"
    ],

    "repository": {
        "type": "git",
        "url": "https://github.com/FabioKaelin/theme-cleo.git"
    }
}
